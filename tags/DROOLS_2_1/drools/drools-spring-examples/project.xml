<?xml version="1.0"?>
<project>
    <extend>../project.xml</extend>
    <pomVersion>3</pomVersion>
    <name>Drools :: Spring Integration - Examples</name>
    <artifactId>drools-spring-examples</artifactId>
    <groupId>drools</groupId>

    <dependencies>
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-core</artifactId>
            <version>${pom.currentVersion}</version>
            <properties>
                <eclipse.dependency>true</eclipse.dependency>
                <requiredBy>drools:spring - compile, test, run</requiredBy>
            </properties>
        </dependency>
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-spring</artifactId>
            <version>${pom.currentVersion}</version>
            <properties>
                <eclipse.dependency>true</eclipse.dependency>
                <requiredBy>drools:spring-examples - compile, test, run</requiredBy>
            </properties>
        </dependency>
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-spring-jdk5</artifactId>
            <version>${pom.currentVersion}</version>
            <properties>
                <eclipse.dependency>true</eclipse.dependency>
                <requiredBy>drools:spring-examples - compile, test, run</requiredBy>
            </properties>
        </dependency>

        <dependency>
            <groupId>springframework</groupId>
            <artifactId>spring-core</artifactId>
            <version>1.2.2</version>
            <properties>
                <requiredBy>drools:drools-spring - compile, run, test</requiredBy>
            </properties>
        </dependency>
        <dependency>
            <groupId>springframework</groupId>
            <artifactId>spring-beans</artifactId>
            <version>1.2.2</version>
            <properties>
                <requiredBy>drools:drools-spring - compile, run, test</requiredBy>
            </properties>
        </dependency>
        <dependency>
            <groupId>springframework</groupId>
            <artifactId>spring-context</artifactId>
            <version>1.2.2</version>
            <properties>
                <requiredBy>drools:drools-spring - compile, run, test</requiredBy>
            </properties>
        </dependency>
        
		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
			<version>1.0.4</version>
            <properties>
                <requiredBy>springframework - compile, run, test</requiredBy>
            </properties>
		</dependency>

        <dependency>
            <groupId>easymock</groupId>
            <artifactId>easymock</artifactId>
            <version>1.1</version>
            <properties>
                <requiredBy>drools:drools-spring - compile, test</requiredBy>
            </properties>
        </dependency>
		<dependency>
			<groupId>easymock</groupId>
			<artifactId>easymockclassextension</artifactId>
            <version>1.1</version>
            <properties>
                <requiredBy>drools:drools-spring - compile, test</requiredBy>
            </properties>
		</dependency>
		<dependency>
			<groupId>easymock</groupId>
			<artifactId>easymockcontainer-jdk5</artifactId>
			<version>1.3</version>
            <properties>
                <requiredBy>drools:drools-spring - compile, test</requiredBy>
            </properties>
		</dependency>
        
		<dependency>
			<groupId>cglib</groupId>
			<artifactId>cglib</artifactId>
			<version>2.1</version>
            <properties>
                <requiredBy>easymock - compile, test</requiredBy>
                <requiredBy>springframework - run(optional)</requiredBy>
            </properties>
		</dependency>
		<dependency>
			<groupId>asm</groupId>
			<artifactId>asm</artifactId>
			<version>1.5.3</version>
            <properties>
                <requiredBy>cglib</requiredBy>
            </properties>
		</dependency>
    </dependencies>

    <build>
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
            <resources>
                <resource>
                    <directory>src/test/data</directory>
                    <includes>
                        <include>**/*.data</include>
                    </includes>
                </resource>
                <resource>
                    <directory>src/test</directory>
                    <includes>
                        <include>**/*.xml</include>
                        <include>**/*.drl</include>
                    </includes>
                </resource>
            </resources>
        </unitTest>
        <resources>
            <resource>
                <directory>src/main</directory>
                <includes>
                    <include>**/*.drl</include>
                    <include>**/*.xml</include>
                    <include>**/primes.txt.gz</include>
                </includes>
            </resource>
        </resources>
    </build>

</project>
