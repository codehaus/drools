<?xml version="1.0"?>
<project>
    <extend>../project.xml</extend>
    <pomVersion>3</pomVersion>
    <name>Drools :: Spring Integraton - JDK5</name>
    <artifactId>drools-spring-jdk5</artifactId>
    <groupId>drools</groupId>

    <dependencies>
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-core</artifactId>
            <version>${pom.currentVersion}</version>
            <properties>
                <eclipse.dependency>true</eclipse.dependency>
                <scope>compile, run, test</scope>
            </properties>
        </dependency>
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-base</artifactId>
            <version>${pom.currentVersion}</version>
            <properties>
                <eclipse.dependency>true</eclipse.dependency>
                <scope>compile, run, test</scope>
            </properties>
        </dependency>
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-io</artifactId>
            <version>${pom.currentVersion}</version>
            <properties>
                <eclipse.dependency>true</eclipse.dependency>
                <scope>compile, run, test</scope>
            </properties>
        </dependency>
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-smf</artifactId>
            <version>${pom.currentVersion}</version>
            <properties>
                <eclipse.dependency>true</eclipse.dependency>
                <scope>compile, run, test</scope>
            </properties>
        </dependency>
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-spring</artifactId>
            <version>${pom.currentVersion}</version>
            <properties>
                <eclipse.dependency>true</eclipse.dependency>
                <scope>compile, run, test</scope>
            </properties>
        </dependency>

        <dependency>
            <groupId>springframework</groupId>
            <artifactId>spring</artifactId>
            <version>1.1.3</version>
            <properties>
                <scope>compile, run(optional), test</scope>
            </properties>
        </dependency>
		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
			<version>1.0.4</version>
            <properties>
                <requiredBy>springframework:spring</requiredBy>
                <scope>compile, run(optional), test</scope>
            </properties>
		</dependency>

        <dependency>
            <groupId>easymock</groupId>
            <artifactId>easymock</artifactId>
            <version>1.1</version>
            <properties>
                <scope>compile, test</scope>
            </properties>
        </dependency>
		<dependency>
			<groupId>easymock</groupId>
			<artifactId>easymockclassextension</artifactId>
            <version>1.1</version>
            <properties>
                <scope>compile, test</scope>
            </properties>
		</dependency>
		<dependency>
			<groupId>easymock</groupId>
			<artifactId>easymockcontainer-jdk5</artifactId>
			<version>1.0.1</version>
            <properties>
                <scope>compile, test</scope>
            </properties>
		</dependency>
		<dependency>
			<groupId>cglib</groupId>
			<artifactId>cglib-full</artifactId>
			<version>2.0.2</version>
            <properties>
                <requiredBy>easymock</requiredBy>
                <scope>compile, test</scope>
            </properties>
		</dependency>
    </dependencies>

    <build>

        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
            <resources>
                <resource>
                    <directory>src/test/data</directory>
                    <includes>
                        <include>**/*.data</include>
                    </includes>
                </resource>
                <resource>
                    <directory>src/test</directory>
                    <includes>
                        <include>**/*.xml</include>
                        <include>**/*.drl</include>
                    </includes>
                </resource>
            </resources>
        </unitTest>

        <!-- J A R  R E S O U R C E S -->
        <!-- Resources that are packaged up inside the JAR file -->
        <resources>
            <resource>
                <directory>src/conf</directory>
                <includes>
                    <include>**/*.conf</include>
                    <include>**/*.xsd</include>
                </includes>
            </resource>
        </resources>

    </build>

</project>

