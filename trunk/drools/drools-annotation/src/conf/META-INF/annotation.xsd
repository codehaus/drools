<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
	targetNamespace="http://drools.org/semantics/annotation"
	elementFormDefault="qualified"
	xmlns:annotation="http://drools.org/semantics/annotation"
	xmlns:rules="http://drools.org/rules">

	<xs:import namespace="http://drools.org/rules"
		schemaLocation="rules.xsd" />

	<xs:element name="rule" type="xs:string" substitutionGroup="rules:abstractRule">
		<xs:complexType>
			<xs:attribute name="name" use="required" type="xs:string" />
			<xs:attribute name="class" use="required" type="xs:string" />
			<xs:attribute name="salience" type="xs:integer" />
			<xs:attribute name="no-loop" type="xs:boolean" />
			<xs:attribute name="description" type="xs:string" />
		</xs:complexType>
	</xs:element>
	

