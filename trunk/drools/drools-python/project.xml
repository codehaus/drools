        <mailingList>
            <name>despots</name>
            <subscribe>mailto:despots-subscribe@drools.codehaus.org</subscribe>
            <unsubscribe>mailto:despots-unsubscribe@drools.codehaus.org</unsubscribe>
            <archive>http://archive.drools.codehaus.org/despots/</archive>
        </mailingList>         
        <mailingList>
            <name>dev</name>
            <subscribe>mailto:dev-subscribe@drools.codehaus.org</subscribe>
            <unsubscribe>mailto:dev-unsubscribe@drools.codehaus.org</unsubscribe>
            <archive>http://archive.drools.codehaus.org/dev/</archive>
        </mailingList>      
        <mailingList>
            <name>scm</name>
            <subscribe>mailto:scm-subscribe@drools.codehaus.org</subscribe>
            <unsubscribe>mailto:scm-unsubscribe@drools.codehaus.org</unsubscribe>
            <archive>http://archive.drools.codehaus.org/scm/</archive>
        </mailingList>   
        <mailingList>
            <name>user</name>
            <subscribe>mailto:user-subscribe@drools.codehaus.org</subscribe>
