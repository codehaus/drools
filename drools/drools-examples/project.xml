<?xml version="1.0"?>
<project>
    <extend>../project.xml</extend>
    <pomVersion>3</pomVersion>
    <name>Drools :: Example Library</name>
    <artifactId>drools-examples</artifactId>
    <groupId>drools</groupId>

    <!-- Need to mark these as compile-time/run-time -->

    <dependencies>
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-core</artifactId>
            <version>${pom.currentVersion}</version>
            <properties>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-smf</artifactId>
            <version>${pom.currentVersion}</version>
            <properties>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-io</artifactId>
            <version>${pom.currentVersion}</version>
            <properties>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-base</artifactId>
            <version>${pom.currentVersion}</version>
            <properties>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-java</artifactId>
            <version>${pom.currentVersion}</version>
            <properties>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <!-- Note: Groovy depends on JDK1.4 so this
                 module is really not JDK1.3-compatible. -->
            <groupId>drools</groupId>
            <artifactId>drools-groovy</artifactId>
            <version>${pom.currentVersion}</version>
            <properties>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-python</artifactId>
            <version>${pom.currentVersion}</version>
            <properties>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-jsr94</artifactId>
            <version>${pom.currentVersion}</version>
            <properties>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <groupId>jython</groupId>
            <artifactId>jython</artifactId>
            <version>20020827-no-oro</version>
        </dependency>
        <dependency>
            <!-- Note: Groovy depends on JDK1.4 so this
                 module is really not JDK1.3-compatible. -->
            <groupId>groovy</groupId>
            <artifactId>groovy-all</artifactId>
            <version>1.0-jsr-01</version>
        </dependency>
        <dependency>
            <groupId>antlr</groupId>
            <artifactId>antlr</artifactId>
            <version>2.7.5</version>
        </dependency>
        <dependency>
            <id>janino</id>
            <version>2.3.2</version>
            <artifactId>janino</artifactId>
        </dependency>
        <dependency>
            <id>simple-jndi</id>
            <version>0.9.1</version>
        </dependency>
        <dependency>
            <groupId>jsr94</groupId>
            <artifactId>jsr94</artifactId>
            <version>1.1</version>
        </dependency>

        <dependency>
            <groupId>xml-apis</groupId>
            <artifactId>xml-apis</artifactId>
            <version>1.0.b2</version>
        </dependency>
        <dependency>
            <groupId>xerces</groupId>
            <artifactId>xercesImpl</artifactId>
            <version>2.6.2</version>
        </dependency>

        <dependency>
            <id>jgoodies</id>
            <version>1.0.4</version>
            <artifactId>forms</artifactId>
        </dependency>

        <dependency>
            <id>foxtrot</id>
            <version>2.0</version>
            <artifactId>foxtrot</artifactId>
        </dependency>

    </dependencies>

    <build>
        <!-- J A R  R E S O U R C E S -->
        <!-- Resources that are packaged up inside the JAR file -->

        <resources>
            <resource>
                <directory>src/main</directory>
                <includes>
                    <include>**/*.drl</include>
                    <include>**/*.dat</include>
                    <include>**/primes.txt.gz</include>
                    <include>**/*.gif</include>
                </includes>
            </resource>

            <resource>
                <directory>src/conf</directory>
                <includes>
                    <include>**/*.conf</include>
                    <include>**/*.xsd</include>
                    <include>**/*.properties</include>
                </includes>
            </resource>
        </resources>

    </build>

</project>

