<?xml version="1.0"?>
<project>
  
  <pomVersion>3</pomVersion>
  <name>drools</name>
  <id>drools</id>
  <currentVersion>1.0-beta-1</currentVersion>

  <organization>
    <name>The Werken Company</name>
    <url>http://www.werken.com/</url>
    <logo>/images/werken.gif</logo>
  </organization>
  <inceptionYear>2001</inceptionYear>
  <package>org.drools</package>

  <shortDescription>Rete Based Rules Engine</shortDescription>

  <description>
    The drools project is a dynamic rules engine for Java.
    It uses a modified implementation of Forgy's RETE algorithm to
    allow natural expression of rules within an object-oriented language.
  </description>

  <url>http://drools.org/</url>

  <siteAddress>drools.werken.com</siteAddress>
  <siteDirectory>/www/drools.werken.com</siteDirectory>
  
  <repository>
    <connection>scm:cvs::pserver:anonymous@cvs.werken.com:/cvsroot/drools:drools</connection>
    <url>http://cvs.werken.com/viewcvs.cgi/drools/drools/</url>
  </repository>

  <versions/>
  <branches/>

  <mailingLists>
    <mailingList>
      <name>blissed interest</name>
      <archive>http://lists.werken.com/pipermail/blissed-interest/</archive>
    </mailingList>
    <mailingList>
      <name>blissed cvs messages</name>
      <archive>http://lists.werken.com/pipermail/blissed-cvs/</archive>
    </mailingList>
  </mailingLists>

  <developers>

    <developer>
      <name>Bob McWhirter</name>
      <id>werken</id>
      <email>bob@werken.com</email>
      <organization>The Werken Company</organization>
      <role>Founder</role>
    </developer>

    <developer>
      <name>James Strachan</name>
      <id>jstrachan</id>
      <email>james_strachan@yahoo.co.uk</email>
      <organization>Spiritsoft</organization>
    </developer>

    <developer>
      <name>David Cramer</name>
      <id>dcramer</id>
      <email>davec@fastcrypt.com</email>
      <organization></organization>
    </developer>

    <developer>
      <name>Martin Hald</name>
      <id>mhald</id>
      <email>martin.hald@bigfoot.com</email>
    </developer>

  </developers>


  <!-- Need to mark these as compile-time/run-time -->

  <dependencies>
<!--
    <dependency>
      <id>antlrall</id>
      <version>2.7.1</version>
    </dependency>
-->

    <dependency>
      <id>antlr</id>
      <version>2.7.1</version>
      <url>http://antlr.org/</url>
    </dependency>

    <dependency>
      <id>bsh</id>
      <version>1.2-b3</version>
      <url>http://beanshell.org/</url>
    </dependency>

    <dependency>
      <id>dom4j</id>
      <version>1.4-dev</version>
      <url>http://dom4j.org/</url>
    </dependency>

    <dependency>
      <id>jaxen</id>
      <version>1.0-FCS-full</version>
      <url>http://jaxen.org/</url>
    </dependency>

    <dependency>
      <id>jdring</id>
      <version>1.0</version>
    </dependency>

    <dependency>
      <id>saxpath</id>
      <version>1.0-FCS</version>
      <url>http://saxpath.org/</url>
    </dependency>

  </dependencies>

  <build>

    <nagEmailAddress>drools-cvs@lists.werken.com</nagEmailAddress>

    <sourceDirectory>src/java/main</sourceDirectory>

    <unitTestSourceDirectory>src/java/test</unitTestSourceDirectory>

    <integrationUnitTestSourceDirectory/>

    <aspectSourceDirectory></aspectSourceDirectory>

    <!-- Unit test classes -->

    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
    </unitTest>

    <!-- Integration unit test classes -->

    <integrationUnitTestPatterns>
    </integrationUnitTestPatterns>

    <!-- J A R  R E S O U R C E S -->
    <!-- Resources that are packaged up inside the JAR file -->

    <resources>
      <includes>
        <include>**/*Test.java</include>
      </includes>
    </resources>

  </build>

</project>

