    <currentVersion>2.0-beta-13-dev</currentVersion>

    <organization>
        <name>The Codehaus</name>
        <url>http://www.codehaus.org</url>
        <logo>http://www.codehaus.org/codehaus-small.gif</logo>
    </organization>
    <inceptionYear>2001</inceptionYear>
    <package>org.drools</package>
    <logo>http://images.werken.com/drools.gif</logo>

    <shortDescription>Rete Based Rules Engine</shortDescription>

    <description>
    </description>

    <url>http://drools.org</url>

    <siteAddress>drools.codehaus.org</siteAddress>
    <siteDirectory>/www/drools.codehaus.org</siteDirectory>

    <repository>
        <connection>scm:cvs:pserver:anonymous@cvs.codehaus.org:/cvsroot/drools:drools</connection>
        <url>http://cvs.drools.codehaus.org/</url>
    </repository>

    <versions/>
    <branches/>

    <mailingLists>
    </mailingLists>

    <developers>

        <developer>
            <name>Bob McWhirter</name>
            <id>bob</id>
            <email>bob@werken.com</email>
            <organization>The Werken Company</organization>
            <roles>
                <role>Founder</role>
                <role>Lead Developer</role>
            </roles>
        </developer>

        <developer>
            <name>N. Alex Rupp</name>
            <id>n_alex</id>
            <email>alex@nrfx.com</email>
            <roles>
                <role>JSR-94 Lead</role>
            </roles>
        </developer>

        <developer>
            <name>Thomas Diesler</name>
            <id>tdiesler</id>
            <email>thomas.diesler@softcon-itec.de</email>
            <roles>
                <role>JSR-94 Developer</role>
            </roles>
        </developer>
    </developers>

    <contributors>
        <contributor>
            <name>Brian Topping</name>
            <id>topping</id>
            <email>topping@bill2.com</email>
            <roles>
                <role>JSR-94 Contributor</role>
            </roles>
        </contributor>
    </contributors>

    <!-- Need to mark these as compile-time/run-time -->

    <dependencies>

        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-base</artifactId>
            <version>2.0-beta-13-dev</version>
        </dependency>

        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-core</artifactId>
            <version>2.0-beta-13-dev</version>
        </dependency>

        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-smf</artifactId>
            <version>2.0-beta-13-dev</version>
        </dependency>
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-io</artifactId>
            <version>2.0-beta-13-dev</version>
        </dependency>
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-java</artifactId>
            <version>2.0-beta-13-dev</version>
        </dependency>

        <dependency>
            <groupId>jaas</groupId>
            <artifactId>jaas</artifactId>
            <version>1.0</version>
        </dependency>

        <dependency>
            <groupId>jca</groupId>
            <artifactId>jca</artifactId>
            <version>1.0</version>
        </dependency>

        <dependency>
            <groupId>bsh</groupId>
            <artifactId>bsh</artifactId>
            <version>2.0b1</version>
        </dependency>

        <dependency>
            <groupId>antlr</groupId>
            <artifactId>antlr</artifactId>
            <version>2.7.2</version>
        </dependency>

        <dependency>
            <groupId>jsr94</groupId>
            <artifactId>jsr94</artifactId>
            <version>1.0</version>
        </dependency>

        <dependency>
            <groupId>xerces</groupId>
            <artifactId>xercesImpl</artifactId>
            <version>2.6.2</version>
        </dependency>

        <dependency>
            <groupId>xerces</groupId>
            <artifactId>xmlParserAPIs</artifactId>
            <version>2.2.1</version>
        </dependency>

        <dependency>
            <groupId>aspectj</groupId>
            <artifactId>aspectjrt</artifactId>
            <version>1.1.0</version>
        </dependency>

    </dependencies>

    <build>
        <nagEmailAddress>drools-cvs@lists.codehaus.org</nagEmailAddress>
        <sourceDirectory>src/main</sourceDirectory>
        <unitTestSourceDirectory>src/test</unitTestSourceDirectory>
        <integrationUnitTestSourceDirectory/>
        <aspectSourceDirectory/>

        <!-- Unit test classes -->

        <unitTest>
            <includes>
                <include>**/*TestCase.java</include>
            </includes>
            <excludes>
                <exclude>**/benchmark/**</exclude>
            </excludes>
            <resources>
                <resource>
                    <directory>src/test</directory>
                    <includes>
                        <include>**/*.drl</include>
                        <include>**/*.jelly</include>
                    </includes>
                </resource>
            </resources>
        </unitTest>

        <!-- Integration unit test classes -->

        <integrationUnitTestPatterns>
        </integrationUnitTestPatterns>

        <!-- J A R  R E S O U R C E S -->
        <!-- Resources that are packaged up inside the JAR file -->

        <resources>
            <resource>
                <directory>src/main</directory>
                <includes>
                    <include>**/*.properties</include>
                    <include>**/*.xml</include>
                </includes>
            </resource>
        </resources>

    </build>

</project>

