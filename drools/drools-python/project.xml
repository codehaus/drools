<?xml version="1.0"?>
<project>
    <extend>../project.xml</extend>
    <pomVersion>3</pomVersion>
    <name>Drools :: Python Semantics Module</name>
    <artifactId>drools-python</artifactId>
    <groupId>drools</groupId>

    <dependencies>
        <dependency>
            <groupId>aspectj</groupId>
            <artifactId>aspectjrt</artifactId>
            <version>1.2</version>
        </dependency>
        <dependency>
            <groupId>jython</groupId>
            <artifactId>jython</artifactId>
            <version>20020827-no-oro</version>
        </dependency>
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-core</artifactId>
            <version>${pom.currentVersion}</version>
            <properties>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-smf</artifactId>
            <version>${pom.currentVersion}</version>
            <properties>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
        <dependency>
            <groupId>drools</groupId>
            <artifactId>drools-smftest</artifactId>
            <version>${pom.currentVersion}</version>
            <properties>
                <eclipse.dependency>true</eclipse.dependency>
            </properties>
        </dependency>
    </dependencies>

    <build>
        <!-- J A R  R E S O U R C E S -->
        <!-- Resources that are packaged up inside the JAR file -->

	<unitTest>
		<includes>
		  <include>**/*Test.java</include>
		</includes>
<!--
		<excludes>
		  <exclude>**/PythonSemanticTest.java</exclude>
		</excludes>
-->
            <resources>
                <resource>
                    <directory>src/test/data</directory>
                    <includes>
                        <include>**/*.data</include>
                    </includes>
                </resource>
            </resources>
        </unitTest>

        <resources>
            <resource>
                <directory>src/conf</directory>
                <includes>
                    <include>**/*.conf</include>
                    <include>**/*.xsd</include>
                </includes>
            </resource>
        </resources>
    </build>

    <reports>
      <report>maven-javadoc-plugin</report>
      <report>maven-junit-report-plugin</report>
    </reports>
</project>

